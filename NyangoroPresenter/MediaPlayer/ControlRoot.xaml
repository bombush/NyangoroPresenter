<nyangoroPlugin:PluginControlRoot x:Class="Nyangoro.Plugins.MediaPlayer.ControlRoot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:nyangoroPlugin="clr-namespace:Nyangoro.Plugins;assembly=Nyangoro.Interfaces"
             mc:Ignorable="d">
    <Grid>
        <Grid Name="PlaylistGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="65"></ColumnDefinition>
                <ColumnDefinition Width="125" />
            </Grid.ColumnDefinitions>
            <Button Content="Add" Width="60" Height="30" Click="AddToPlaylist_Click" Grid.Column="0"></Button>
            <Button Content="Play" Width="60" Height="30" Click="Play_Click" Margin="3,53,2,139"></Button>
            <!-- <TextBlock>MY Control text</TextBlock> 
            <Button Content="Blablabla" Click="Button_Click" ></Button> -->
            <ListBox Grid.Column="1" Height="222" HorizontalAlignment="Left" Name="PlaylistBox" VerticalAlignment="Top" Width="120" SelectionChanged="PlaylistBox_SelectionChanged" />
        </Grid>
    </Grid>
</nyangoroPlugin:PluginControlRoot>
