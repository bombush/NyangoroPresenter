<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:nyangoroLayout="clr-namespace:Nyangoro.Core.Layout;assembly=NyangoroPresenter">
        <Grid.RowDefinitions>
            <RowDefinition Height="500*"></RowDefinition>
            <RowDefinition Height="3000*" />
            <RowDefinition Height="1500*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <WrapPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
        <nyangoroLayout:PluginAnchor PluginType="MediaPlayer"></nyangoroLayout:PluginAnchor>
        </WrapPanel>
        <nyangoroLayout:PluginAnchor Grid.Row="2" PluginType="ProgrammeMessenger"></nyangoroLayout:PluginAnchor>
</Grid>